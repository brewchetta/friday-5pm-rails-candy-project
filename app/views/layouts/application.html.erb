<!DOCTYPE html>
<html>
  <head>
    <title>Candy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <p>Welcome <%= current_user.name %></p>

    <% if !!current_user %>
      <%= button_to "Logout", session_path(1), method: :delete %>
    <% end %>

    <%= button_to "Index", treats_path, method: :get %>

    <%= yield %>
  </body>
</html>
